        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="password" columnName="level"/>
            </not>
        </preConditions>
        <addColumn tableName="password">
            <column name="level" defaultValue="0" type="int"/>
        </addColumn>
    </changeSet>
