        <addForeignKeyConstraint baseTableName="quotationLines" baseColumnNames="quotationID"
                                 constraintName="fk_quotationID"
                                 referencedTableName="quotation"
                                 referencedColumnNames="quotationID"
                                 onDelete="CASCADE"
