{% extends "@internal/wrapper.html.twig" %}
{% block content %}
    <table border="0"
           cellpadding="30"
           cellspacing="0"
           width="100%"
    >
        <tr>
            <td align="center"
                valign="top"
            >

                <!-- CONTENT TABLE // -->
                <table border="0"
                       cellpadding="0"
                       cellspacing="0"
                       width="100%"
                >
                    <tr>
                        <td valign="top"
                            class="textContent"
                        >
                            <!--
                                The "mc:edit" is a feature for MailChimp which allows
                                you to edit certain row. It makes it easy for you to quickly edit row sections.
                                http://kb.mailchimp.com/templates/code/create-editable-content-areas-with-mailchimps-template-language
                            -->
                            <h3 mc:edit="header"
                                style="color:#5F5F5F;line-height:125%;font-family:Helvetica,Arial,sans-serif;font-size:20px;font-weight:normal;margin-top:0;margin-bottom:1rem;text-align:left;"
                            >
                                Dear {contactName}</h3>
                            <div mc:edit="body"
                                 style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:1rem;color:#5F5F5F;line-height:135%;"
                            >
                                The list below shows the status of all the requests that are open with our Service Desk
                                team. Please don’t reply to this email as it won’t be processed by our system, but if
                                you wish to add an update please use the link for the service request that will take you
                                to our portal.
                            </div>


                            <table class="report-table">
                                <thead>
                                <tr>
                                    <th>Service Request</th>
                                    <th>Raised By</th>
                                    <th>Raised On</th>
                                    <th>Status</th>
                                    <th align="left">Details</th>
                                </tr>
                                </thead>
                                <tbody>
                                <!-- BEGIN openSRBlock -->
                                <tr>
                                    <td align="center"><a href="{srLinkToPortal}">{srNumber}</a></td>
                                    <td align="center"
                                        style="white-space: nowrap"
                                    >{srRaisedByName}
                                    </td>
                                    <td align="center"
                                        style="white-space: nowrap"
                                    >{srRaisedOnDate}
                                    </td>
                                    <td align="center"
                                        style="white-space: nowrap"
                                    >{srStatus}
                                    </td>
                                    <td align="left">{srDetails}</td>
                                </tr>
                                <!-- END openSRBlock -->
                                </tbody>
                            </table>

                            <div mc:edit="footer"
                                 style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#5F5F5F;line-height:135%;"
                            >
                                Regards
                            </div>
                        </td>
                    </tr>
                </table>
                <!-- // CONTENT TABLE -->

            </td>
        </tr>
    </table>
{% endblock %}