{% extends '@customerFacing/wrapper.html.twig' %}
{# @var data CNCLTD\DailyReport\ContactWithOpenServiceRequests #}
{% block replyText %}
{% endblock %}
{% block headerTitle %}
    Service Request Information
{% endblock %}

{% block headerContet %}
    We are keeping you in the picture......
{% endblock %}

{% block content %}
    <p>{{ data.primaryMainContactFirstName }}</p>
    <p>
        The list below shows the status of all the requests that are open with our Service Desk team.
        Please don’t reply to this email as it won’t be processed by our system, but if you wish to add an update please
        use
        the link for the service request that will take you to our portal.
    </p>
    <table class="details">
        <thead>
        <tr>
            <th style="padding: 10px;text-align: right;">Service Request</th>
            <th  style="text-align: left;">Raised By</th>
            <th  style="text-align: left;">Raised On</th>
            <th  style="text-align: left;">Status</th>
        </tr>
        </thead>
        <tbody>
        {# @var sr CNCLTD\DailyReport\OpenServiceRequestDTO #}

        {% for sr in data %}
            <tr>
                <td align="center" style="padding: 5px;text-align: right;">
                    <a href="https://www.cnc-ltd.co.uk/view/?serviceid={{ sr.id }}">{{ sr.id }}</a>
                </td>
                <td align="center"
                    style="white-space: nowrap;text-align: left;"
                >
                    {{ sr.raisedBy }}
                    {% if onScreen %}
                        ({{ data.customerName }})
                    {% endif %}
                </td>
                <td align="center"
                    style="white-space: nowrap;text-align: left;"
                >{{ sr.raisedOn }}
                </td>
                <td align="center"
                    style="white-space: nowrap;text-align: left;"
                >{{ sr.status }}
                </td>
            </tr>
            <tr>
                <td                     colspan="4"
                    style="padding: 0 10px 15px 10px; text-align: justify"
                >
                    {{ sr.details|raw }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block serviceRequestURL %}https://www.cnc-ltd.co.uk/portal/service-requests{% endblock %}

{% block rightFooter %}

{% endblock %}
