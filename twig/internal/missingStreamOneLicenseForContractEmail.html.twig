{% extends "@internal/wrapper.html.twig" %}
{# @var items \CNCLTD\StreamOneProcessing\ContractData[] #}
{% block content %}
    <p>
        The following contracts don't have a matching license in Stream One
    </p>
    <table>
        <thead>
        <tr>
            <th>Customer</th>
            <th>Contract ID</th>
            <th>Item Description</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    {{ item.customerName }}
                </td>
                <td>
                    {{ item.contractId }}
                </td>
                <td>
                    {{ item.itemDescription }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}