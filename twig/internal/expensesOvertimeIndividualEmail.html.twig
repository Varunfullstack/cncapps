{% extends "wrapper.html.twig" %}
{# @var expenses \CNCLTD\ExpenseExportItem[] #}
{# @var overtimeActivities \CNCLTD\OvertimeExportItem[] #}
{% block content %}
    {% if expenses|length > 0 %}
        <p>
            Expenses
        </p>
        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Customer</th>
                <th>Activity</th>
                <th>Miles</th>
                <th>Description</th>
                <th>Net</th>
                <th>VAT</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% for expense in expenses %}
                <tr>
                    <td>{{ expense.activityDate }}</td>
                    <td>{{ expense.customerName }}</td>
                    <td>{{ expense.activityId }}</td>
                    <td>{{ expense.mileage }}</td>
                    <td>{{ expense.description }}</td>
                    <td>{{ expense.netValue   |format_currency('GBP') }}</td>
                    <td>{{ expense.VATValue   |format_currency('GBP') }}</td>
                    <td>{{ expense.grossValue |format_currency('GBP') }}</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="5">Total Net:</th>
                <th colspan="3">{{ expenseNetTotal |format_currency('GBP') }}</th>
            </tr>
            <tr>
                <th colspan="5">Total VAT:</th>
                <th colspan="3">{{ expenseVATTotal |format_currency('GBP') }}</th>
            </tr>
            <tr>
                <th colspan="5">Total:</th>
                <th colspan="3">{{ expenseGrossTotal |format_currency('GBP') }}</th>
            </tr>
            </tfoot>
        </table>
        <br>
        <br>
    {% endif %}
    {% if overtimes|length > 0 %}
        <table>
            <thead>
            <tr>
                <th>Date</th>
            </tr>
            <tr>
                <th>Start</th>
            </tr>
            <tr>
                <th>End</th>
            </tr>
            <tr>
                <th>Customer</th>
            </tr>
            <tr>
                <th>Activity</th>
            </tr>
            <tr>
                <th>Hours</th>
            </tr>
            </thead>
            <tbody>
            {% for overtime in overtimes %}
                <tr>
                    <td>{{ overtime.activityDate }}</td>
                    <td>{{ overtime.activityStartTime }}</td>
                    <td>{{ overtime.activityEndTime }}</td>
                    <td>{{ overtime.customerName }}</td>
                    <td>{{ overtime.activityId }}</td>
                    <td>{{ overtime.overtimeValue }}</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    {% endif %}

{% endblock %}